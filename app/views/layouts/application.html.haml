!!!
%html
  %head
    %title Studjaro - Gerenciamento de Informações Acadêmicas
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'tabs/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jBreadCrumb.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.3.2.min.js'
    = javascript_include_tag 'jquery.form.js'
    = javascript_include_tag 'application.js'

  %body

    // @head => main-nav, page_title, etc...
    .header-container{}
      .container
        #header.span-24

          #top_track.right
            .span-23
              -form_tag( 'search', :class => 'search_form' ) do
                =text_field_tag 'what', '', :class => 'text'
            .span-1.last
              =link_to 'login', login_path


          %h1{:id => 'page_title'}= @page_title || 'Studjaro'

          // left main nav
          %ul.tabs.main-nav.left
            %li
              %a{:class => 'selected'} Início
            %li
              %a Disciplinas
            %li
              %a Calendário

          //right main nav
          %ul.tabs.main-nav.right
            %li
              %a{:class => 'selected'} Something
            %li
              %a Something Else
            %li
              %a Another Item

    // @middle => subnavs
    .middle-container
      .container
        .span-24{:id => 'middle'}

          %ul.tabs.subnav
            %li
              %a{:class => 'selected'} Something
            %li
              %a Something Else
            %li
              %a Another Item

    .main-container
      .container.border
        .span-24{:id => 'main'}

          .breadCrumbHolder.module
            #breadcrumb.breadCrumb.module
              %ul
                %li.first
                  %a{:href => '#'} item 1
                %li 
                  %a{:href => '#'} item 2
                %li 
                  %a{:href => '#'} item long long item just to see the behavior
                %li current item

          = yield

    // @foot => app description, links, etc..
    .foot-container
      .container
        .span-24{:id => 'footer'}
