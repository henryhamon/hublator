<h1>Editing level</h1>

<% form_for([:backstage, @level]) do |f| %>
  <%= f.error_messages %>
  <p>
    <label>Level</label>
    <%= f.text_field :level %>
  </p>
  <p>
    <label>Need XP</label>
    <%= f.text_field :need_xp %>
  </p>
  <p>
    <label>HP Received</label>
    <%= f.text_field :hp_received %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', backstage_levels_path %>
