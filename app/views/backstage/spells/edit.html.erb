<h1>Editing spell</h1>

<% form_for([:backstage, @spell]) do |f| %>
  <%= f.error_messages %>
  <p>
    <label>Name</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label>Spell Type</label>
    <%= f.text_field :spell_type %>
  </p>
  <p>
    <label>Damage</label>
    <%= f.text_field :damage %>
  </p>
  <p>
    <label>Level</label>
    <%= collection_select(:spell, :level_id, Level.find(:all), :id, :level) %>
  </p>
  <p>
    <label>Max Level</label>
    <%= f.text_field :max_level %>
  </p>
  <p>
    <label>Max_level</label>
    <%= f.text_field :min_level %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', backstage_spells_path %>
