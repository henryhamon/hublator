- form_for @user do |f|

  = f.error_messages
  .span-11.colborder
    .inner
      %h2 Submit your data

      %p
        = f.label :name
        %br
        = f.text_field :name, :class => 'text'

      %p
        = f.label :login
        %br
        = f.text_field :login, :class => 'text'

      %p
        = f.label :email
        %br
        = f.text_field :email, :class => 'text'
      - if @user.openid_identifier.blank?

        %p
          = f.label :password
          %br
          = f.password_field :password, :class => 'text'

        %p
          = f.label :password_confirmation
          %br
          = f.password_field :password_confirmation, :class => 'text'
      %p
        = f.submit "Submit"
  .span-12.last
    .inner
      %h2 Or use OpenID
      %p
        = f.label :openid_identifier, "OpenID URL"
        %br
        = f.text_field :openid_identifier, :class => 'text openid'
      %p
        = f.submit "Submit"

